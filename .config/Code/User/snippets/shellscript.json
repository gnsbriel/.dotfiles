            "# but WITHOUT ANY WARRANTY; without even the implied warranty of",
            "# MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE. See the",
            "# GNU General Public License for more details.",
            "#",
            "# You should have received a copy of the GNU General Public License",
            "# along with this program. If not, see <http://www.gnu.org/licenses/>.",
            "æ",
            "# Options",
            "set -o errexit   # Used to exit upon error, avoiding cascading errors",
            "set +o nounset   # Exposes unset variables",
            "set -o pipefail  # Unveils hidden failures",
            "set +o xtrace    # Trace what gets executed (Debug)",
            "trap ctrl_c INT  # Trap CTRL + C and call ctrl_c",
            "æ",
            "# Colors",
            "readonly cyan='\\033[0;36m'",
            "readonly red='\\033[0;31m'",
            "readonly yellow='\\033[1;33m'",
            "readonly purple='\\033[0;35m'",
            "readonly blue='\\033[0;34m'",
            "readonly light_gray='\\033[0;37m'",
            "readonly green='\\033[0;32m'",
            "readonly nc='\\033[0m'",
            "æ",
            "# %b - Print the argument while expanding backslash escape sequences.",
            "# %q - Print the argument shell-quoted, reusable as input.",
            "# %d, %i - Print the argument as a signed decimal integer.",
            "# %s - Print the argument as a string.",
            "# printf \"'%b' 'TEXT' '%s' '%b'\\n\" \"\\${color}\" \"\\${var}\" \"\\${reset}\"",
            "æ",
            "# Variable definitions",
            "dirpath=\"\\$(dirname \"\\${0}\")\";    readonly dirpath",
            "æ",
            "# Help Message",
            "function helpmsg() {",
            "æ",
            "   echo \"\"",
            "   echo \"Usage: ./\\${0##*/} [OPTION]...\"",
            "   echo \"\"",
            "   echo \"Options:\"",
            "   echo \"-h, --help     Print this help message.\"",
            "   echo \"\"",
            "   echo \"OPTION1        DESC\"",
            "   echo \"OPTION2        DESC\"",
            "}",
            "æ",
            "# Other functions",
            "æ",
            "# shellcheck disable=SC2317",
            "function ctrl_c() {",
            "    # echo \"** Trapped CTRL-C\"",
            "    exit 0",
            "}",
            "æ",
            "# Main Program",
            "function main() {",
            "æ",
            "    while true; do",
            "        case \"\\${1}\" in",
            "            -a | --arch)",
            "                :",
            "                exit 0",
            "                ;;",
            "            -wsl | --wsl)",
            "                :",
            "                exit 0",
            "                ;;",
            "            -w | --windows)",
            "                :",
            "                exit 0",
            "                ;;",
            "            -h | --help | *)",
            "                helpmsg",
            "                exit 0",
            "                ;;",
            "        esac",
            "    done",
            "}",
            "[[ \"\\${1}\" == \"--\" ]] && shift",
            "æ",
            "cd \"\\$(dirname \"\\${0}\")\"  # cd to executable path",
            "main \"\\${@}\"",
        ],
        "description": "Program template"
    },

    "Create": {
        "prefix": "create",
        "body": [
            "function create() {",
            "",
            "    local option=\"\\${1}\"; shift",
            "    local path=( \"\\${@}\" )",
            "",
            "    case \"\\${option}\" in",
            "        -f | --file )",
            "            for file in \"\\${path[@]}\"; do",
            "                [ -f \"\\${file}\" ] && return",
            "                mkdir --parents --verbose \"\\$(dirname \"\\${file}\")\" \\",
            "                    && touch \"\\${file}\" || exit 2",
            "            done",
            "            ;;",
            "        -d | --directory )",
            "            for dir in \"\\${path[@]}\"; do",
            "                [ -d \"\\${dir}\" ] && return",
            "                mkdir --parents --verbose \"\\${dir}\" || exit 2",
            "            done",
            "            ;;",
            "        * )",
            "            echo \"\"",
            "            echo \"Syntax: create [OPTION..] [PATH..]\"",
            "            echo \"\"",
            "            echo \"Options:\"",
            "            echo \"-f, --file\"",
            "            echo \"-d, --directory\"",
            "            exit 0",
            "            ;;",
            "    esac",
            "}"
        ],
        "description": [
            "Function used to create a new file or folder while acception multiple paths",
            "and allowing to create any parenting folders."
        ]
    },

    "Countdown": {
        "prefix": "countdown",
        "body": [
            "function countdown() {",
            "æ",
            "    if [ \"\\${#}\" == \"\" ]; then",
            "        echo \"Syntax: countdown [PHRASE..]\"",
            "        exit 2",
            "    fi",
            "æ",
            "    printf \"%b%s%b\\n\" \"\\${blue}\" \"\\${*}\" \"\\${nc}\"",
            "    for ((i = 5 ; i > 0 ; i--)); do",
            "        printf \"%bContinuing in: %s%b\\r\" \"\\${light_gray}\" \"\\${i}\" \"\\${nc}\"",
            "        sleep 1",
            "    done",
            "    printf \"\\n\"",
            "}",
        ],
        "description": [
            "Function used to output a countdown timer with a custom phrase."
        ]
    },

